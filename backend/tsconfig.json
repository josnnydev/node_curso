{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "typeRoots": ["./src/types", "node_modules/@types"]
    },
    "include": ["src"]
  }
  